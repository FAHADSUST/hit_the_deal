<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/viwerSignUpFullPageRL"
	    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splashgreen"
        >
		<RelativeLayout
		    android:id="@+id/fbSignUpRL"
		    android:layout_width="fill_parent"
	        android:layout_height="60dp"        
	        android:orientation="vertical"
	        android:background="@drawable/prompt_bg"
	        android:layout_alignParentBottom="true" >
	
	        <Button
	            android:id="@+id/fbSignupB"
	            android:layout_width="wrap_content"
	            android:layout_height="50dp"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:background="@drawable/fb_signup_button" />
	
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:id="@+id/viwerSignUpRA"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" 
	        android:layout_above="@+id/fbSignUpRL">
	
	        <EditText
	            android:id="@+id/userNameSignUpEd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_above="@+id/emailSignEd"
	            android:ems="10" 
	            android:background="@drawable/user_name_ed"
	            android:hint="Username"
	            android:paddingLeft="10dp"
	            android:inputType="text"
	            android:scaleY=".9"
	            />
	
	        <EditText
	            android:id="@+id/emailSignEd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_above="@+id/passSignEd"
	            android:background="@drawable/password_ed"
	            android:ems="10" 
	            android:hint="Email"
	            android:inputType="textEmailAddress"
	            android:paddingLeft="10dp"
	            android:scaleY=".9">
	           
	        </EditText>
	
	        <EditText
	            android:id="@+id/passSignEd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_above="@+id/signSignupB"
	            android:layout_marginBottom="15dp"
	            android:background="@drawable/password_ed"
	            android:ems="10" 
	            android:inputType="textPassword"
	            android:hint="Password"
	            android:paddingLeft="10dp"
	            android:scaleY=".9"/>
	
	        <Button
	            android:id="@+id/signSignupB"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="16dp"
	            android:scaleY=".9"
	            android:background="@drawable/signup_button" />

	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="150dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:background="@color/darkpink" >

	            <ImageView
	                android:id="@+id/logoAnimImg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentTop="true"
	                android:layout_centerHorizontal="true"
	                android:background="@drawable/img"
	                android:scaleType="centerCrop"
	                android:src="@drawable/fahad" />

	            <Button
	                android:id="@+id/captureImgB"
	                style="?android:attr/buttonStyleSmall"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/logoAnimImg"
	                android:layout_alignParentBottom="true"
	                android:text="Capture" />

	            <Button
	                android:id="@+id/browseImgB"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBaseline="@+id/captureImgB"
	                android:layout_alignBottom="@+id/captureImgB"
	                android:layout_alignRight="@+id/logoAnimImg"
	                android:text="Brow" />

	        </RelativeLayout>
	
	    </RelativeLayout>
    </RelativeLayout>