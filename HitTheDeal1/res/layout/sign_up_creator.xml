<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdosdos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offlightwhite" >

    <RelativeLayout
        android:id="@+id/creatorSignUpInnerRA1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/signupCreatorB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/signup_button"
            android:scaleY=".9" />

        

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
           >

            <ImageView
                android:id="@+id/organizationImgView"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_alignBottom="@+id/browseCreatImgB"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:background="@drawable/img"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profic" />

            <ImageButton
                android:id="@+id/captureCreateImgB"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/organizationImgView"
                android:layout_alignParentBottom="true"
                android:src="@drawable/camera_icon"
                
                />

            <ImageButton
                android:id="@+id/browseCreatImgB"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/captureCreateImgB"
                android:layout_alignRight="@+id/organizationImgView"
                android:layout_alignTop="@+id/captureCreateImgB"
                android:src="@drawable/browse_icon" />

        </RelativeLayout>

        <EditText
            android:id="@+id/emailCreatSignEd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/signupCreatorB"
            android:layout_below="@+id/orgNameCreatorSignUpEd"
            android:layout_centerHorizontal="true"
            android:background="@drawable/user_name_ed"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:scaleY=".9" />

        <EditText
            android:id="@+id/addressCreatSignCEd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passCreatSignEd"
            android:layout_alignRight="@+id/emailCreatSignEd"
            android:layout_below="@+id/emailCreatSignEd"
            android:layout_centerHorizontal="true"
            android:background="@drawable/user_name_ed"
            android:ems="10"
            android:hint="Address"
            android:inputType="text"
            android:textColor="@color/black"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/passCreatSignEd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/emailCreatSignEd"
            android:layout_below="@+id/addressCreatSignCEd"
            android:layout_centerHorizontal="true"
            android:background="@drawable/user_name_ed"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:scaleY=".9" />

        <EditText
            android:id="@+id/orgNameCreatorSignUpEd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emailCreatSignEd"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginTop="15dp"
            android:background="@drawable/user_name_ed"
            android:ems="10"
            android:hint="Organization name"
            android:textColor="@color/black"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:scaleY=".9" />

        <ImageButton
            android:id="@+id/addLocationCreatorB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signupCreatorB"
            android:layout_alignRight="@+id/passCreatSignEd"
            android:src="@drawable/add_location_b" />

        <Spinner
            android:id="@+id/creatorTypeIdSpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passCreatSignEd"
            android:layout_alignTop="@+id/addLocationCreatorB"
            android:layout_toLeftOf="@+id/addLocationCreatorB" 
            
            />
    </RelativeLayout>

</RelativeLayout>