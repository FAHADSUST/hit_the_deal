<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="75" >

            <com.fahad.ornob.sust.hitthedeal.customImageView.CustomNetworkImageView
                android:id="@+id/profie_image_view4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/take_snap_button"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|left"
                android:layout_margin="3dp"
                android:src="@drawable/camera_icon" />

            <ImageButton
                android:id="@+id/browse_snap_button"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="3dp"
                android:src="@drawable/browse_icon" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="35"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="80"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:text="  Name"
                    android:textColor="@color/green"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/nameEt"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="30"
                    android:background="@drawable/rectangle_edit_text"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="80"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:text="  Address"
                    android:textColor="@color/green"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/addressEt"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="30"
                    android:background="@drawable/rectangle_edit_text"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="80"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:text="  Phone no."
                    android:textColor="@color/green"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/phnEt"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="30"
                    android:background="@drawable/rectangle_edit_text"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="80"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="70"
                    android:gravity="center_vertical"
                    android:text="  Type"
                    android:textColor="@color/green"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/type_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="50"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/grab_location_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="80"
                    android:src="@drawable/marker_black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="90"
            android:background="@color/green"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/save_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:background="@color/green"
                android:gravity="center"
                android:text="Update"
                android:textColor="@drawable/button_color_selector"
                android:textSize="25dp" />

            <View
                android:layout_width="2px"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/black" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:background="@color/green"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@drawable/button_color_selector"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/map_layout6"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:visibility="invisible" >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="Tap And Hold On Map To Select New Location"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/exit_map_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|left"
            android:layout_margin="3dp"
            android:background="@drawable/cross_icon" />
    </FrameLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="invisible" />

</FrameLayout>