<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="60" >

            <com.fahad.ornob.sust.hitthedeal.customImageView.CustomNetworkImageView
                android:id="@+id/profie_image_view5"
                android:layout_width="fill_parent"
                android:layout_height="210dp"
                android:scaleType="fitXY" 
                android:src="@drawable/event_default"/>

            <Button
                android:id="@+id/take_snap_button1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="bottom|left"
                android:layout_margin="3dp"
                android:background="@drawable/camera_icon" />

            <Button
                android:id="@+id/browse_snap_button1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="3dp"
                android:background="@drawable/browse_icon" />
        </FrameLayout>

        <customviews.ObservableScrollView
            android:id="@+id/scrollview3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="40"
            android:background="@color/white" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/eventNameET1"
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/rectangle_edit_text"
                        android:gravity="center"
                        android:hint="Event Title"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/descriptionET1"
                        android:layout_width="fill_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="20"
                        android:background="@drawable/rectangle_edit_text"
                        android:gravity="center"
                        android:hint="Event Description"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/linkET1"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="20"
                        android:background="@drawable/rectangle_edit_text"
                        android:gravity="center"
                        android:hint="Tap The Arrow To NAvigate To Event Link"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="80" >

                        <Button
                            android:id="@+id/openBrowser1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/right_black"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/startDateET1"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="20"
                        android:background="@drawable/rectangle_edit_text"
                        android:editable="false"
                        android:gravity="center"
                        android:hint="Tap The Arrow To Choose Date"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="80" >

                        <Button
                            android:id="@+id/startDatePicker1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/right_black"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/endDateET1"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="20"
                        android:background="@drawable/rectangle_edit_text"
                        android:editable="false"
                        android:gravity="center"
                        android:hint="Tap The Arrow To Choose Date"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_weight="80" >

                        <Button
                            android:id="@+id/endDatePicker1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/right_black"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="30"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="50"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/latitudeET1"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/rectangle_edit_text"
                                android:editable="false"
                                android:gravity="center"
                                android:hint="Tap The Map Marker To Choose Location"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="50"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/longitudeET1"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/rectangle_edit_text"
                                android:editable="false"
                                android:gravity="center"
                                android:hint="Tap The Map Marker To Choose Location"
                                android:textColor="@color/black"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="70" >

                        <Button
                            android:id="@+id/openMapButton2"
                            android:layout_width="60dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/marker_black"
                            android:gravity="center" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </customviews.ObservableScrollView>
        
         <Button
                android:id="@+id/createButton4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="85"
                android:background="@color/green"
                android:gravity="center"
                android:text="Update Event"
                android:textColor="@drawable/button_color_selector"
                android:textSize="25dp" /> 
    </LinearLayout>

    <FrameLayout
        android:id="@+id/map_layout2"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:visibility="invisible" >

        <fragment
            android:id="@+id/map2"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="Tap And Hold On Map To Select New Location"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/exit_map_button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|left"
            android:layout_margin="3dp"
            android:background="@drawable/cross_icon" />
    </FrameLayout>

    <ProgressBar
        android:id="@+id/progress_bar3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="invisible" />
</FrameLayout>